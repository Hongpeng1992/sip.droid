<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context="com.wiadvance.sip.AddContactActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_contact_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_columnSpan="2"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <TextView
        android:id="@+id/add_contact_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        />

    <EditText
        android:id="@+id/add_contact_name_edittext"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/add_contact_phone_textview"
        android:layout_height="wrap_content"
        android:text="Phone:"
        />

    <EditText
        android:id="@+id/add_contact_phone_edittext"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        />

    <!--<TextView-->
        <!--android:id="@+id/add_contact_email_textview"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Email:"-->
        <!--/>-->

    <!--<EditText-->
        <!--android:id="@+id/add_contact_email_edittext"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="textEmailAddress"-->
        <!--/>-->

    <Button
        android:id="@+id/add_contact_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom"
        android:text="新增"
        />

</GridLayout>
