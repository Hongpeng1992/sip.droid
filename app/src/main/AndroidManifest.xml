<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wiadvance.sipdemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- call.startAudio(); -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- call.setSpeakerMode(true); -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- Mixpanel -->
    <uses-permission android:name="android.permission.BLUETOOTH" />


    <!-- Filter out the device doesn't support sip -->
    <uses-feature android:name="android.hardware.sip.voip"/>
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/phone_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2c5de1ba077edd775560b40be6ae292a31ca855b"/>

        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ContactActivity"/>

        <activity android:name=".CallReceiverActivity"
            android:parentActivityName=".ContactActivity">
        </activity>

    </application>
</manifest>